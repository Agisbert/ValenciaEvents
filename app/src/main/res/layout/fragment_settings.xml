        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/save"
            android:layout_marginTop="@dimen/titulo_parrafo" >

            <RadioButton
                android:id="@+id/all_radio"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass_edit_sett"
                android:checked="true"
                android:text="@string/eventos_todos"
                android:typeface="monospace" />

            <RadioButton
                android:id="@+id/free_radio"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_radio"
                android:text="@string/eventos_gratis"
                android:typeface="monospace" />

            <RadioButton
                android:id="@+id/family_radio"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/free_radio"
                android:text="@string/eventos_familiares"
                android:typeface="monospace" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/nott_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup1"
            android:text="@string/notifications"
            android:typeface="monospace" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/nott_radio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/nuevo_titulo"
            android:gravity="center_horizontal"
            android:weightSum="3" >


            <Button
                android:id="@+id/plusButtonlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/googleplus_revised"
                android:text="@string/login_gp"
                 />

            <Button
                android:id="@+id/faceButtonlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/facebook"                
                android:text="@string/login_fb" />

            <Button
                android:id="@+id/twitterButtonlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/twitter" 
                android:text="@string/login_tw"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>